
@{
    ViewBag.Title = "uploadMyFiles";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<style>
    .imglst {
        list-style: none;
    }

        .imglst li {
            display: inline-block;
            min-width: 65px;
            text-align: center;
            margin: 5px 0;
            border-bottom: 1px solid #ccc;
        }

            .imglst li:last-child {
                border-bottom: none;
            }
</style>
<h2>تحميل صور للموقع</h2>
<div class="row" ng-controller="uploadImgController">
    <div class="col-md-6">
        <ul class="imglst">
            <li  ng-repeat="img in allImgs" style="">
                @*<span>{{$index+1}}</span>*@
                <img src="~/UploadedFiles/{{img.FileName}}" style="height:55px;padding:3px;border:1px solid #ccc;margin-left:5px;margin-bottom:5px;" /><br/>
                <button ng-click="dImg(img)" class="btn btn-default" name="del-img" style="margin-bottom:5px;"><i class="fa fa-trash" aria-hidden="true" ></i></button>
            </li>
        </ul>
    </div>
    <div class="col-md-6">
        <!-- Dropzone 1 -->
        <div>
            <div id="dropzone1" class="dropzone" options="dzOptions" callbacks="dzCallbacks" ng-dropzone></div>
        </div>

        @*<form action="~/uploadFiles/SaveUploadedFile" method="post"
              enctype="multipart/form-data" class="dropzone"
              id="dropzoneForm"></form>*@
        @*<button id="submit-all">Submit All Files</button>*@
    </div>
</div>


@section Scripts{
<script src="~/SPA/uploadImgController.js"></script>
<script type="text/javascript">

    Dropzone.options.dropzoneForm =
        {
            init: function () {
                this.on("complete", function (data) {
                    //var res = eval('(' + data.xhr.responseText + ')');   
                    var res = JSON.parse(data.xhr.responseText);
                });
            }
        };  

</script>
}
